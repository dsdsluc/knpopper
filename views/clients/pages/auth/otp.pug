extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-success(message, 5000)
  +alert-error(message, 5000)
  section.otp-verification.product.footer-padding
    .container
      .login-section
        .row.align-items-center
          .col-lg-6
            .login-form
              .review-form.box-shadows
                .review-form-text
                  h5.comment-title OTP Verification
                  img(src="/clients/images/homepage-one/vector-line.png" alt="img")
                form.review-inner-form(action="/auth/password/verify-otp" method="POST" id="otpForm")
                  .review-form-name
                    label.form-label(for="email") Your Email**
                    input.form-control.readonly-input(type="text" id="email" name="email" value=email readonly)
                  .review-form-name
                    label.form-label(for="otp") Enter OTP Code**
                    input.form-control(type="text" id="otp" placeholder="Enter OTP" name="otp" maxlength="6" required)
                  .review-form-name
                    p.text-muted An OTP has been sent to your email. Please enter it below to verify your account.
                  .register-btn.text-center
                    button.shop-btn(type="submit") Verify OTP
                    span.shop-account 
                      | Didn't receive the code?
                      a(href="#resend-otp") Resend OTP
          //- OTP Verification Image
          .col-lg-6
            .login-img
              img(src="/clients/images/homepage-one/account-img.webp" alt="img")
