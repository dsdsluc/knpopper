extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-success(message, 5000)
  +alert-error(message, 5000)

  section.register.product.footer-padding
    .container
      .login-section
        .row.align-items-center
          //- Registration Form
          .col-lg-6
            .login-form
              .review-form.box-shadows
                .review-form-text
                  h5.comment-title Register
                  img(src="/clients/images/homepage-one/vector-line.png" alt="img")
                form.review-inner-form(action="/auth/register" method="POST")
                  .review-form-name
                    label.form-label(for="fullName") Full Name*
                    input.form-control(type="text" id="fullName" placeholder="Full Name" name="fullName" required)
                  .review-form-name
                    label.form-label(for="email") Email Address*
                    input.form-control(type="email" id="email" placeholder="Email" name="email" required)
                  .review-form-name
                    label.form-label(for="phone") Phone Number*
                    input.form-control(type="text" id="phone" placeholder="Phone Number" name="phone" required)
                  .review-form-name
                    label.form-label(for="address") Address
                    input.form-control(type="text" id="address" placeholder="Address" name="address")
                  .review-form-name
                    label.form-label(for="password") Password*
                    input.form-control(type="password" id="password" placeholder="Password" name="password" required)
                  .review-form-name
                    label.form-label(for="confirm-password") Confirm Password*
                    input.form-control(type="password" id="confirm-password" placeholder="Confirm Password" name="confirm-password" required)
                  .review-form-name.checkbox
                    .checkbox-item
                      input(type="checkbox" name="agree" id="agree" required)
                      span.address I agree to the Terms and Conditions
                  .register-btn.text-center
                    button.shop-btn(type="submit") Register
                    span.shop-account 
                      | Already have an account?
                      a(href="/auth/login") Log In
          //- Registration Image
          .col-lg-6
            .login-img
              img(src="/clients/images/homepage-one/account-img.webp" alt="img")
