extends ../../layouts/default.pug

block main
  .row
    // Product Card
    .col-xl-3.col-lg-4
      .card
        .card-body
          img.img-fluid.rounded.bg-light(src="path/to/upload-image", alt="Product Image" upload-image)
          .mt-3
            h4 Avatar Image 
              

        .card-footer.bg-light-subtle
          .row.g-2
            .col-lg-12  
              p General Views

    // Add Admin Account Form Card
    .col-xl-9.col-lg-8
      .card
        .card-header
          h4.card-title General Information

        .card-body
          form(
            action=`/${prefixAdmin}/account/create`,
            method="POST",
            class="form-create-product",
            enctype="multipart/form-data"
          )
            .row
              // Thumbnail Upload Section
              .col-lg-6  
                label(for="avatar" class="form-label")
                  span.btn.btn-outline-secondary.w-100 Avatar
                label.custom-file-upload
                  i.bx.bx-cloud-upload
                  input(
                    type="file",
                    class="form-control-file d-none",
                    id="avatar",
                    name="avatar",
                    accept="image/*",
                    upload-input
                  )

              // Status Radio Buttons Section
              .col-lg-6  
                p Status
                .d-flex.gap-2.align-items-center.mb-3
                  .form-check
                    input.form-check-input(
                      type="radio",
                      name="status",
                      id="flexRadioDefault1",
                      checked,
                      value="active"
                    )
                    label.form-check-label(for="flexRadioDefault1") Active
                  .form-check
                    input.form-check-input(
                      type="radio",
                      name="status",
                      id="flexRadioDefault2",
                      value="inactive"
                    )
                    label.form-check-label(for="flexRadioDefault2") Inactive

              // Admin Name Input
              .col-lg-6
                .mb-3
                  label.form-label(for="admin-name") Account Name
                  input.form-control(
                    type="text",
                    id="admin-name",
                    name="fullName",
                    placeholder="Enter Name"
                  )

              // Admin Email Input
              .col-lg-6
                .mb-3
                  label.form-label(for="admin-email") Email
                  input.form-control(
                    type="email",
                    id="admin-email",
                    name="email",
                    placeholder="Enter Admin Email"
                  )

              // Admin Password Input
              .col-lg-6
                .mb-3
                  label.form-label(for="admin-password") Password
                  input.form-control(
                    type="password",
                    id="admin-password",
                    name="password",
                    placeholder="Enter Password"
                  )

              // Admin Phone Input
              .col-lg-6
                .mb-3
                  label.form-label(for="admin-phone") Phone
                  input.form-control(
                    type="tel",
                    id="admin-phone",
                    name="phone",
                    placeholder="Enter Phone Number"
                  )

              // Role Dropdown
              .col-lg-6
                .mb-3
                  label.form-label(for="role") Role
                  select.form-control(
                    id="role",
                    name="role_id",
                    data-choices,
                    data-choices-groups,
                    data-placeholder="Select Role"
                  )
                    option(value="") Choose a role
                    each role in roles
                      option(value=role.id) #{role.title}


            // Description Textarea
            .row
              .col-lg-12
                .mb-3
                  label.form-label(for="description") Description
                  textarea.form-control.bg-light-subtle(
                    id="description",
                    name="description",
                    rows="7",
                    placeholder="Short description about the admin"
                  )

            // Buttons for Submit and Reset
            .p-3.bg-light.mb-3.rounded
              .row.justify-content-end.g-2
                .col-lg-2
                  button.btn.btn-outline-secondary.w-100(type="submit") Create Account
                .col-lg-2
                  button.btn.btn-primary.w-100(type="reset") Cancel
