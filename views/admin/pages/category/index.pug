extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(message)
  +alert-success(message)
  if( role.permissions.includes("products_category-view"))
    .row
      .col-md-6.col-xl-12
        .row
          each item ,index in earliestCategories
            if index <=3
              .col-md-6.col-xl-3
                .card
                  .card-body.text-center
                    .rounded.bg-secondary-subtle.d-flex.align-items-center.justify-content-center.mx-auto
                      img(src=item.thumbnail, alt="", class="avatar-xl")
                    h4.mt-3.mb-0 #{item.title}


        include ./category-list.pug

